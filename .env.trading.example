# Trading Bot Configuration
# Copy this file to .env and fill in your actual values

# ======================
# REQUIRED SETTINGS
# ======================

# Binance API Credentials (REQUIRED for trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# ======================
# OPTIONAL SETTINGS
# ======================

# Discord Notification (Optional - for trade alerts)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Logging Configuration
LOG_LEVEL=INFO

# Trading Configuration
TRADING_MODE=paper                  # Options: paper, live
MAX_POSITION_SIZE=0.1              # Maximum position size (0.1 = 10% of account)
RISK_PERCENTAGE=2.0                # Risk per trade (2.0 = 2% of account)

# Default Trading Parameters
DEFAULT_SYMBOL=BTCUSDT             # Default trading pair
DEFAULT_TIMEFRAME=15m              # Default chart timeframe

# Application Settings
TRADING_BOT_SYNC_MODE=false        # Run in synchronous mode for testing