# ==============================================
# Trading Bot 환경변수 설정 예시
# ==============================================
# 이 파일을 .env로 복사하고 실제 값들로 업데이트하세요
# cp .env.example .env

# ==============================================
# Binance API 설정 (필수)
# ==============================================
# Binance 메인넷 API 자격 증명 (실거래용)
BINANCE_MAINNET_API_KEY=your_mainnet_api_key_here
BINANCE_MAINNET_SECRET_KEY=your_mainnet_secret_key_here

# Binance 테스트넷 API 자격 증명 (연습용 - 안전)
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_SECRET_KEY=your_testnet_secret_key_here

# 네트워크 선택 설정
BINANCE_TESTNET=true  # true: 테스트넷 사용 (안전), false: 메인넷 사용 (실거래)

# API 엔드포인트 URL
BINANCE_MAINNET_BASE_URL=https://api.binance.com/api
BINANCE_TESTNET_BASE_URL=https://testnet.binance.vision/api

# ==============================================
# 거래 설정
# ==============================================
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_TIMEFRAME=15m
TRADING_MODE=paper
MAX_POSITION_SIZE=1000.0
RISK_PERCENTAGE=2.0
MAX_DAILY_TRADES=5

# ==============================================
# Discord 알림 설정 (선택사항)
# ==============================================
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
ENABLE_DISCORD_NOTIFICATIONS=true
NOTIFICATION_LEVEL=info

# ==============================================
# 로깅 설정
# ==============================================
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# ==============================================
# 애플리케이션 설정
# ==============================================
TRADING_BOT_SYNC_MODE=false
ENVIRONMENT=development

# ==============================================
# 웹소켓 설정
# ==============================================
WEBSOCKET_RECONNECT_DELAY=5
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10
WEBSOCKET_PING_INTERVAL=20

# ==============================================
# 성능 모니터링 설정
# ==============================================
ENABLE_PERFORMANCE_MONITORING=false
MEMORY_LIMIT_MB=512
CPU_LIMIT_PERCENT=80